{
    "compileOnSave": true,
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],
    "include": ["./src/*"],
    "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "module": "esnext",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "target": "es2015",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2018",
        "dom"
      ],
      "disableSizeLimit": true,
      "plugins": [
        {"name": "@angular/language-service"} 
      ]
    }
  }
  